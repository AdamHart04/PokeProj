<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Info</title>
    <link rel="icon" type="x-icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Pok%C3%A9_Ball_icon.svg/512px-Pok%C3%A9_Ball_icon.svg.png">
    <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.cdnfonts.com/css/pokemon-solid" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

</head>
<body>
    <%- include('header') %> 

    <% pokemonlist.forEach((pokemondata) => {  %>
    <div >
        <a href="<%= pokemondata.ImgPath%>"> <img id="BigImage" src="<%= pokemondata.ImgPath%>" /></a>
    </div>
    <div class="CardInfo">
        <p>
            <label>Pokemon Card ID:</label>
            <input type="text" name="Card_ID_field" readonly value="<%= pokemondata.Card_ID%>" class="inputfield">
        
            <label>Pokemon Name:</label>
            <input type="text" name="Name_field" readonly value="<%= pokemondata.Name%>" class="inputfield">

            <label>Pokemon HP:</label>
            <input type="text" name="HP_field" readonly value="<%= pokemondata.HP%>" class="inputfield">

            <label>Pokemon Type:</label>
            <input type="text" name="Pokemon_Type_field" readonly value="<%= pokemondata.Pokemon_Type%>" class="inputfield">

            <label>Pokemon Card Rarity:</label>
            <input type="text" name="Rarity_field" readonly value="<%= pokemondata.Rarity%>" class="inputfield">

        </p>
    </div>

     <div class="CardInfo2">
        <p>
            <label>Pokemon Card Owner:</label>
            <input type="text" name="Rarity_field" readonly value="<%= pokemondata.Username%>" class="inputfield">

            <label>Pokemon Move:</label>
            <input type="text" name="Rarity_field" readonly value="<%= pokemondata.Move_Name%>" class="inputfield">

            <label>Pokemon Move desc:</label>
            <input type="text" name="Rarity_field" readonly value="<%= pokemondata.Move_Description%>" id="descrip" class="inputfield" >

            <label>Pokemon Move dmg:</label>
            <input type="text" name="Rarity_field" readonly value="<%= pokemondata.Move_Damage%>" class="inputfield">

        </p>
    </div>
    
     <% }); %>

     <%- include("footerScript") %>

</body>
</html>